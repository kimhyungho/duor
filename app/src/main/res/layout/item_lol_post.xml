<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/button_post"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/lol_item_gamemode"
            android:layout_width="36dp"
            android:layout_height="14dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/tag_red"
            android:gravity="center"
            android:textColor="@color/mainColor"
            android:textSize="8sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="일반" />

        <TextView
            android:id="@+id/lol_item_tier"
            android:layout_width="36dp"
            android:layout_height="14dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/tag_blue"
            android:gravity="center"
            android:textColor="@color/blueColor"
            android:textSize="8sp"
            app:layout_constraintStart_toEndOf="@+id/lol_item_gamemode"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="I3~G3" />

        <TextView
            android:id="@+id/lol_item_headcount"
            android:layout_width="41dp"
            android:layout_height="14dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/tag_yellow"
            android:gravity="center"
            android:textColor="@color/yellowColor"
            android:textSize="8sp"
            app:layout_constraintStart_toEndOf="@+id/lol_item_tier"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="인원 1명" />

        <TextView
            android:id="@+id/lol_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="3시간 전" />

        <TextView
            android:id="@+id/lol_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lol_item_gamemode"
            tools:text="솔로랭크 플레티넘3 정글 구함" />

        <TextView
            android:id="@+id/lol_item_recruit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="12dp"
            android:text="모집중"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lol_item_title" />

        <ImageView
            android:id="@+id/lol_item_mic"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lol_item_recruit"
            app:layout_constraintTop_toBottomOf="@+id/lol_item_title"
            app:srcCompat="@drawable/ic_baseline_mic_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>