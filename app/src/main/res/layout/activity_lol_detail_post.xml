<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LolDetailPostActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/lol_detail_post_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back" />

    <Button
        android:id="@+id/lol_detail_post_chat"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="@drawable/button_no_padding"
        android:text="@string/do_chat"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/lol_detail_post_scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/lol_detail_post_chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lol_detail_post_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lol_detail_post_const2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lol_detail_post_post"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_detail_post"
                    android:elevation="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lol_detail_post_game_info">

                    <TextView
                        android:id="@+id/lol_detail_post_gamemode"
                        android:layout_width="36dp"
                        android:layout_height="14dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="35dp"
                        android:background="@drawable/tag_red"
                        android:gravity="center"
                        android:text="노말"
                        android:textColor="@color/mainColor"
                        android:textSize="8sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/lol_detail_post_tier"
                        android:layout_width="36dp"
                        android:layout_height="14dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="35dp"
                        android:background="@drawable/tag_blue"
                        android:gravity="center"
                        android:text="B1~S1"
                        android:textColor="@color/blueColor"
                        android:textSize="8sp"
                        app:layout_constraintStart_toEndOf="@+id/lol_detail_post_gamemode"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="36dp"
                        android:layout_height="14dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="35dp"
                        android:background="@drawable/tag_yellow"
                        android:gravity="center"
                        android:text="인원 1명"
                        android:textColor="@color/yellowColor"
                        android:textSize="8sp"
                        app:layout_constraintStart_toEndOf="@+id/lol_detail_post_tier"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/lol_detail_post_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:layout_marginEnd="16dp"
                        android:text="1시간 전"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/lol_detail_post_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="6dp"
                        android:text="솔로랭크 실버4 모든 포지션 구함"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lol_detail_post_gamemode" />

                    <ImageView
                        android:id="@+id/lol_detail_post_mic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        app:layout_constraintBottom_toBottomOf="@+id/lol_detail_post_title"
                        app:layout_constraintStart_toEndOf="@+id/lol_detail_post_title"
                        app:srcCompat="@drawable/ic_baseline_mic_24" />

                    <TextView
                        android:id="@+id/lol_detail_post_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="61dp"
                        android:layout_marginBottom="24dp"
                        android:text="한국에서 골드유전데 북미꺼 오랜만에 배치봐서 실버나왔네요ㅠㅠ 빠르게 올라가실분 친추 ㄱ 참고로 전적봅니다.(트타 원챔 유저)"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lol_detail_post_title" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lol_detail_post_game_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/lol_detail_post_post"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/lol_detail_post_profile_card"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="30dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/lol_detail_post_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="6dp"
                        android:text="빵만드는브랜드"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/lol_detail_post_profile_card"
                        app:layout_constraintTop_toTopOf="@+id/lol_detail_post_profile_card" />

                    <TextView
                        android:id="@+id/lol_detail_post_odds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="10dp"
                        android:text="승률 52%/ 146승 136패"
                        android:textSize="9sp"
                        app:layout_constraintStart_toEndOf="@+id/lol_detail_post_profile_card"
                        app:layout_constraintTop_toBottomOf="@+id/lol_detail_post_nickname" />

                    <ImageView
                        android:id="@+id/lol_detail_post_solorank_image"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="14dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lol_detail_post_profile_card"
                        app:srcCompat="@drawable/button_write" />

                    <ImageView
                        android:id="@+id/lol_detail_post_freerank_image"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="14dp"
                        app:layout_constraintEnd_toStartOf="@+id/lol_detail_post_freerank_image_3"
                        app:layout_constraintStart_toEndOf="@+id/lol_detail_post_solorank_image"
                        app:layout_constraintTop_toBottomOf="@+id/lol_detail_post_profile_card"
                        app:srcCompat="@drawable/button_write" />

                    <ImageView
                        android:id="@+id/lol_detail_post_freerank_image_3"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="50dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lol_detail_post_profile_card"
                        app:srcCompat="@drawable/button_write" />

                    <FrameLayout
                        android:layout_width="1dp"
                        android:layout_height="51dp"
                        android:background="@color/grayColor1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/lol_detail_post_freerank_image"
                        app:layout_constraintStart_toEndOf="@+id/lol_detail_post_solorank_image"
                        app:layout_constraintTop_toBottomOf="@+id/lol_detail_post_profile_card">

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="1dp"
                        android:layout_height="51dp"
                        android:background="@color/grayColor1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/lol_detail_post_freerank_image_3"
                        app:layout_constraintStart_toEndOf="@+id/lol_detail_post_freerank_image"
                        app:layout_constraintTop_toBottomOf="@+id/lol_detail_post_profile_card">

                    </FrameLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>